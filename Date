import java.time.LocalDate;
class Date{
  public static void main(String args[])
     {
        LocalDate x1=LocalDate.now();
        LocalDate x2=x1.minusDays(1);
        LocalDate x3=x1.plusDays(1);
        System.out.println("Todays date is  "+x1);
        System.out.println("yesterdays date is  "+x2);
        System.out.println("tomorrows date is  "+x3);
        
     }




}

